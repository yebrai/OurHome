<div>

  <h1>Professionals list </h1>

</div>
<div class="background-list-professional">
  <div class="container mx-auto mt-4 ">
    <div class="row">
    {{#each professionalsList}}
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="{{this.img}}" class="card-img-top" alt="img-property" />
          <div class="card-body">
            <h5 class="card-title">Professional Name: {{name}}.</h5>
            <p class="card-text">E-mail: {{email}}.</p>
            <p class="card-text">Cif: {{cif}}.</p>
            <p class="card-text">Phone: {{phone}}.</p>
                   <form action="/admin/professional/{{_id}}/delete" method="POST">
              <button  class="btn btn-outline-danger"> Delete</button>
            </form>
          </div>
        </div>
      </div>    
    {{/each}}
    </div>
  </div>
</div>