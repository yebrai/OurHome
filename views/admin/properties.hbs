<div>

  <h1>List of houses</h1>

<div class="background-list-professional">
  <div class="container mx-auto mt-4 ">
    <div class="row">
    {{#each propertiesList}}
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="{{this.img}}" class="card-img-top" alt="img-property" />
          <div class="card-body">
            <h5 class="card-title">Name: {{name}}.</h5>
            <p class="card-text">Location: {{location}}.</p>
            
            <form action="/admin/property/{{_id}}/delete" method="POST">
              <button  class="btn btn-outline-danger"> Delete</button>
            </form>
          </div>
        </div>
      </div>    
    {{/each}}
    </div>
  </div>
</div>