<nav class="nav-list-container">
  <a href="/professional/promote">My promotes</a>

</nav>

<div class="background-list">
  <div class="container mx-auto mt-4 ">
    <div class="row">
    {{#each listProperties}}
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="{{this.img}}" class="card-img-top" alt="img-property" />
          <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">Location: {{this.location}}.</h6>
              <p class="card-text">Price: $ {{this.price}}.-</p>
              <p class="card-text">Property for sale.</p> 
              <div class="button-container-list">
              <a href="/professional/details/{{this._id}}" class="btn btn-outline-info">More details!</a>
              <form action="/professional/promote/{{this._id}}" method="post">
                <button class="btn btn-primary">Promote House</button>
              </form>
              </div>
          </div>
        </div>
      </div>    
    {{/each}}
    </div>
  </div>
</div>

