            <p class="card-text">Style: {{style}}.</p>
            <p class="card-text">Posted: {{../created}}.</p>
            <p class="card-text">Updated: {{../updated}}.</p>

            {{!-- <label type="text" value="Amenities">Amenities</label> --}}
