              <a href="/property/edit/{{details._id}}" class="btn btn-outline-info">Edit</a>
                  {{/if}}

                 <form action="/professional/promote/{{details._id}}" method="post">
                    <button class="btn btn-primary">Promote House</button>
                </form>
              {{!-- <a href="/profile/profile/{{details._id}}" class="btn btn-secondary">Contact Owner</a> --}}
