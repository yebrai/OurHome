<h3>User profile</h3>

<div>
  {{#with details}}
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <div class="card">
          <img src="{{img}}" class="card-img-top" alt="img-profile-user" />
          <div class="card-body">
            <h5 class="card-title">Name: {{name}}.</h5>
            <p class="card-text">CIF: {{cif}}.</p>
            <p class="card-text">E-mail: {{email}}</p>
            <p class="card-text">Phone: {{phone}}.</p>
            <div>
              <a href="/professional/edit/{{_id}}" class="btn btn-outline-info">Edit</a>
              <a href="#" class="btn btn-secondary">Change your pass!</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/with}}
</div>