<h3>detalles de viviendas</h3>

  {{#with details}}
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <div class="card">
          <img src="{{img}}" class="card-img-top" alt="img-property" />
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">Location: {{location}}.</p>
            <p class="card-text">Dimensions: {{m2}}mÂ².</p>
            <p class="card-text">Price: $ {{price}}.-</p>
            <p class="card-text">Amenities: 
                {{#each amenities}}
                    <li class="card-text">{{this}}.</li>
                {{/each}}
            </p>
            <p class="card-text">Posted: {{../created}}.</p>
            <p class="card-text">Updated: {{../updated}}.</p>


            <p class="card-text">Owner: <b>{{owner.surname}} {{owner.name}}.</b></p>
            <div>
  {{/with}}
                {{#if sameOwner}}
              <a href="/property/edit/{{details._id}}" class="btn btn-outline-info">Edit</a>
                  {{/if}}

               <form action="/profile/favourites/{{details._id}}" method="post">
              {{#if isUserActive}}
                <button class="btn btn-primary"> Add favourite</button> 
              {{/if}}
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>

