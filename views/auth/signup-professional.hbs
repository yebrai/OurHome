<div class="login-container">
  <h1>Crear professional</h1>

  <div>

    <h2>Account Creation</h2>

    <form action="/auth-professional/signup" method="POST" class="form-login-container">

      <label for="name">Name:</label>
      <input type="text" name="name" />

      <select name="links" size="1" onchange="window.location.href=this.value">
        <option value="/auth-professional/signup">Professional</option>
        <option value="/auth/signup">Individual</option>
      </select>

      <br />

      <label for="cif">Cif:</label>
      <input type="text" name="cif" />

      <br />
      <label for="email">Email:</label>
      <input type="email" name="email" />

      <br />
      <label for="phone">Phone:</label>
      <input type="number" name="phone" />

      <br />
      <label for="password">Password:</label>
      <input type="password" name="password" />

      <br />
      <label for="passwordConfirmation">Confirm Password:</label>
      <input type="password" name="passwordConfirmation" />
      <br />

      <a href="">Â¿Dont remember your password?</a>
      <br />
      <p>{{errorMessage}}</p>

      <button>Register</button>
    </form>

  </div>
</div>